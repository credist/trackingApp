<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="trackingApp.Pages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:trackingApp.Pages"
    Title="trackingApp">
    
    <TabBar>
        <ShellContent Icon="zahnrad.png" Title="Settings" Route="settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
        <ShellContent Icon="essen.png" Title="FoodTracking" Route="food" ContentTemplate="{DataTemplate pages:FoodTrackingPage}" />
        <ShellContent Icon="hantel.png" Title="WorkoutTracking" Route="workout" ContentTemplate="{DataTemplate pages:WorkoutPage}" />
        <ShellContent Icon="waage.png" Title="WeightTracking" Route="weight" ContentTemplate="{DataTemplate pages:WeightTrackingPage}" />
    </TabBar>
</Shell>
